<form action="/home/{{this.item._id}}" method="post">
     <input type="text" placeholder="add a comment" name="comment">
     <button class="btn btn-light">add</button>
 </form>
       
      <ul>
       <a href="home/{{this.item._id}}"><p>view comments</p></a>
           
